default namespace = "http://emender.blackened.cz/1.0/"

start = em.report
em.report = element report { em.suite+ }
em.suite =
  element suite {
    em.name.attribute, em.result.attribute, em.info, em.case+
  }
em.info =
  element info {
    em.description & em.authors & em.emails & em.modified & em.tags
  }
em.description = element description { text }
em.authors = element authors { text }
em.emails = element emails { text }
em.modified = element modified { xsd:date }
em.tags = element tags { em.tag* }
em.tag = element tag { text }
em.case =
  element case { em.name.attribute, em.result.attribute, em.test+ }
em.test = element test { em.result.attribute, text* }
em.name.attribute = attribute name { text }
em.result.attribute =
  attribute result {
    xsd:string "pass" | xsd:string "fail" | xsd:string "info"
  }
